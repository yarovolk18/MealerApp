<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.make_complaint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/complaintImage"
            android:layout_width="235dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="100px"
            android:paddingBottom="200px"
            app:srcCompat="@drawable/poo" />

        <EditText
            android:id="@+id/cookUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the cook's username " />

        <EditText
            android:id="@+id/complaintDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your complaint..." />

        <Button
            android:id="@+id/makeComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF474B"
            android:hint="Submit Complaint"
            android:onClick="subComplaint"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>